<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    tools:context=".layout.community.WriterFragment">

    <CheckBox
        android:id="@+id/btn_community_free"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자유게시판"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_community_humor"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_community_humor"
        />
    <CheckBox
        android:id="@+id/btn_community_humor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="유머게시판"
        app:layout_constraintStart_toEndOf="@+id/btn_community_free"
        app:layout_constraintEnd_toStartOf="@+id/btn_community_Photo"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_community_Photo"
        />
    <CheckBox
        android:id="@+id/btn_community_Photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사진게시판"
        app:layout_constraintStart_toEndOf="@+id/btn_community_humor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="20sp"
        android:padding="16sp"
        app:layout_constraintTop_toBottomOf="@+id/btn_community_humor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/input_layout"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/txt_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_community_humor"
        app:layout_constraintBaseline_toBaselineOf="@id/txt_title">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="제목을 입력해주세요"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <EditText
        android:id="@+id/txt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="10" android:gravity="top|left" android:inputType="textMultiLine"
        android:scrollHorizontally="false"
        android:layout_marginTop="20sp"
        android:minWidth="10.0dip"
        android:maxWidth="5.0dip"
        app:layout_constraintTop_toBottomOf="@+id/txt_title"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="작성"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
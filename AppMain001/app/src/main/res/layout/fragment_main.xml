<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layout.main.MainFragment"
    android:layout_margin="12dp">



    <Button
        android:id="@+id/btn_community"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="커뮤니티"
        android:padding="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_QnA"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_QnA"
        />

    <Button
        android:id="@+id/btn_QnA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QnA"
        android:padding="30dp"
        app:layout_constraintStart_toEndOf="@+id/btn_community"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/btn_map"
        />

    <Button
        android:id="@+id/btn_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="동물병원"
        android:padding="30dp"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_my_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_my_info"/>

    <Button
        android:id="@+id/btn_my_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내정보"
        android:padding="30dp"
        app:layout_constraintTop_toTopOf="@+id/btn_community"
        app:layout_constraintStart_toEndOf="@id/btn_map"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>